{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "common/*": ["./pages/common/*"],
            "api/*": ["./api/*"],
            "components/*": ["./components/*"],
            "theme/*": ["./theme/*"]
        }
    },
    "exclude": ["node_modules", ".next", "out"],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "next.config.js",
        "pages/_app.js",
        "./jest-setup.ts"
    ]
}
